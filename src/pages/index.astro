---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill, Button, Card } from '@eliancodes/brutal-ui';
import Analytics from '@vercel/analytics/astro'

const builtWith = [
  { name: 'Prusa Research', url: 'https://www.prusa3d.com' },
  { name: 'Creality', url: 'https://creality.com' },
  { name: 'Anycubic', url: 'https://www.anycubic.com' },
  { name: 'Elegoo', url: 'https://www.elegoo.com' },
  { name: 'Ultimaker', url: 'https://www.ultimaker.com' },
];
---

<Layout
  title=''
  pageTitle='Nozzle Hub Blog'
  description='Nozzle Hub is a blog that '
>
  <main class='bg-pink p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>About Nozzle Hub</h2>
      <div class='col-span-4'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
              A blog for honest ratings about <a
                class='text-white'
                target='_blank'
                href='https://astro.build/'>3d Printers / Filament</a>
            </p>
            <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
              We support most of the most popular companies
            </p>
            <Button target={'_self'} href='/blog/'>
              Check out the blog &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
            We support companies like
          </h2>
          <ul class='flex gap-4 flex-wrap'>
            {
              builtWith.map((item) => (
                <li>
                  <Pill>
                    <a
                      class='sanchez'
                      href={item.url}
                      target='_blank'
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            Why are we doing this?
          </h2>
          <p class='poppins'>
            Because we hate biased opinion<a
              href='https://www.alexander-gese.com'></a>
          </p>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>

  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-0PXCRQN2YM"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-0PXCRQN2YM');
  </script>
</Layout>

